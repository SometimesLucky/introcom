#include <stdio.h>
int main ()
{
	int i,j;
	int a;
	scanf("%d",&a);
	for(i=0;i<=a;i++)
		{
		j=0;
			while(j<=i)
			{
				printf("%d    ",j);
				j++;
			}
			printf("\n");	
		}
			
   for(i=a-1;i>=0;i--)
   {
   			j=0;
			while(j<=i)
			{
				printf("%d    ",j);
				j++;
			}
			printf("\n");		
   }
   return 0;
}
